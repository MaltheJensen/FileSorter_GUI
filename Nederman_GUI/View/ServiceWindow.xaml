    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Virksomheds Oplysninger" FontSize="20"/>

        <TextBox x:Name="searchCompanyBox" Grid.Column="1" Grid.Row="2" Width="230" Margin="0,20,0,0"/>
        <Button x:Name="searchCompanyButton" Grid.Column="2" Grid.Row="2" Content="Søg Virksomhed" Margin="-130,20,0,0" Width="100" Click="searchCompanyButton_Click"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="Virksomhedens Navn" Margin="0,30,0,0"/>
        <TextBox x:Name="displayNameBox" Grid.Column="1" Grid.Row="4" Margin="0,5,0,0" IsReadOnly="True" Style="{DynamicResource TextBoxStyle1}"/>

        <TextBlock Grid.Column="2" Grid.Row="3" Text="Adresse" Margin="40,30,0,0"/>
        <TextBox x:Name="displayAddressBox" Grid.Column="2" Grid.Row="4" Margin="40,5,0,0" IsReadOnly="True" Width="230" Style="{DynamicResource TextBoxStyle1}"/>

        <TextBlock Grid.Column="1" Grid.Row="5" Text="Virksomhedens Kontaktperson" Margin="0,10,0,0"/>
        <TextBox x:Name="displayContactPersonBox"  Grid.Column="1" Grid.Row="6" IsReadOnly="True" Width="230" Style="{DynamicResource TextBoxStyle1}"/>

        <TextBlock Grid.Column="2" Grid.Row="5" Text="Postnummer og By" Margin="40,10,0,0"/>
        <TextBox x:Name="displayZipCodeBox" Grid.Column="2" Grid.Row="6" IsReadOnly="True" Width="40" Margin="40,0,190,0" Style="{DynamicResource TextBoxStyle1}"/>
        <TextBox x:Name="displayCityBox" Grid.Column="2" Grid.Row="6" Width ="175" Margin="92,0,0,0" IsReadOnly="True" Style="{DynamicResource TextBoxStyle1}"/>

        <TextBlock Grid.Column="1" Grid.Row="7" Text="Virksomhedens Telefon Nummer" Margin="0,10,0,0"/>
        <TextBox x:Name="displayCompanyPhone" Grid.Column="1" Grid.Row="8" IsReadOnly="True" Style="{DynamicResource TextBoxStyle1}"/>

        <TextBlock Grid.Column="1" Grid.Row="9" Text="Job Anvisninger" Margin="0,100,0,0"/>
        <ListBox x:Name="jobInstructionsListBox" Grid.Column="1" Grid.Row="10" Margin="0,5,0,0" Height="290" Grid.ColumnSpan="3" MouseDoubleClick="jobInstructionsListBox_MouseDoubleClick"/>

        <TextBlock Grid.Column="4" Grid.Row="2" Text="Rapporter" Margin="100,0,0,0"/>
        <ListBox x:Name="rapportsListBox" Grid.Column="4" Grid.Row="3" Margin="100,-300,0,0" Height="270" Grid.ColumnSpan="2" Grid.RowSpan="9" MouseDoubleClick="rapportsListBox_MouseDoubleClick"/>

        <Button x:Name="newRepportButton" Grid.Column="5" Grid.Row="2" Content="Ny rapport" Width="100" Height="20" Margin="450,0,0,0" MouseDoubleClick="newRepportButton_MouseDoubleClick"/>
    </Grid>
